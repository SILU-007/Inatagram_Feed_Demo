<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/feed_Head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/md_white_1000"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/feed_Head_Image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3.5dp"
            android:src="@drawable/profile_add_128" />

        <TextView
            android:id="@+id/feed_Head_title"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/nav_more" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/feed_Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_Head"
        android:gravity="start"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height=".8dp"
            android:background="@color/md_grey_300" />



            <ImageView
                android:id="@+id/feed_Image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/md_grey_300"
                android:maxHeight="280dp"
                android:minHeight="200dp"
                android:scaleType="centerCrop" />



        <LinearLayout
            android:id="@+id/feed_Bottom_Bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:padding="5dp">


            <ImageView
                android:id="@+id/button_dislike"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                app:srcCompat="@drawable/ufi_heart_bold" />

            <ImageView
                android:id="@+id/button_comment"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ufi_new_comment" />

            <ImageView
                android:id="@+id/button_send"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ufi_new_direct" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/md_white_1000" />

            <ImageView
                android:id="@+id/button_like"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                app:srcCompat="@drawable/ufi_save_bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/feed_Likes"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:background="@color/md_white_1000"
            android:text="25k likes"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feed_userName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@color/md_white_1000"
                android:text="sunilkumar"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed_ImageCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white_1000"
                android:ellipsize="marquee"
                android:maxLines="3"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="#Learning Intsagram Ui design"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/comment_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/profile_add_128" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/comment_background"
                android:hint="Add a comment..."
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:textColorHint="#bfbfbf"
                android:textSize="14sp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="15 Hours"
            android:textSize="14sp"
            android:textColor="#bfbfbf"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>